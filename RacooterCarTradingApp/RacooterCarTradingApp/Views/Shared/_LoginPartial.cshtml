@using Microsoft.AspNetCore.Identity
@inject SignInManager<Racooter.DataAccess.Models.ApplicationUser> SignInManager
@inject UserManager<Racooter.DataAccess.Models.ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <b>@User.Identity.Name!</b></a>
        </li>
        <li class="nav-item" style="color:white;">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-outline-info text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn-info" style="color:white;" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item" style="padding-left: 10%">
            <a class="nav-link btn-info" style="color:white;" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
