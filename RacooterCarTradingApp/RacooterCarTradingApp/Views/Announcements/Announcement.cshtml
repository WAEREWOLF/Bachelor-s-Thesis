@model Racooter.DataTransferObjects.Announcement.AnnouncementDto

<style>
    .w-100 {
        height: 450px !important;
    }
</style>

<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @if (Model.AnnouncementImages.Count() > 0)
            {
                for (int i = 0; i < Model.AnnouncementImages.Count(); i++)
                {
                    <div class="carousel-item @(i==0?"active":"")">
                        <img class="d-block w-100" src="@Model.AnnouncementImages[i].ImagePath" alt="Second slide">
                    </div>
                }
            }
            else
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/pictures//no-image-icon-23485.png" alt="Second slide">
                </div>
            }

            @*<div class="carousel-item active">
                    <img class="d-block w-100" src="/pictures/car.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/pictures/car.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/pictures/logo.png" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/pictures/logo.png" alt="Third slide">
                </div>*@
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    

        <div style="padding: 25px;margin: 10px;border: 1px solid #000000; background-color: #F5F5F5">
            <div class="row" text-black>
                <label class="col-md-2">
                    Seller Name:
                </label>

                <label class="col-md-2">
                    <strong>@Model.UserName</strong>
                </label>
                <label class="col-md-2">
                    Seller Email:
                </label>

                <label class="col-md-2">
                    <strong>@Model.UserEmail</strong>
                </label>
            </div>
            <div class="col-md-3">
                @if (Model.CreatedBy != ViewBag.CurrentUserId)
                {
                    <a class="btn btn-danger" onclick="App.ReportSeller('@Model.CreatedBy')">Report Seller</a>
                    <a class="btn btn-success" href="/Announcements/Messages?id=@Model.CreatedBy">Contact Seller</a>
                }
            </div>
        </div>
    

