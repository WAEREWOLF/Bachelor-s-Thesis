@model Racooter.UI.Models.AnnouncementViewModel.AddOrUpdateAnnouncementViewModel
@{
    ViewData["Title"] = "AddTrip";
}

    <form asp-action="AddOrUpdateAnnouncement" method="post">

        <div class="row">
            <div class="col-2">
                Title
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Title" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2">
                Price
            </div>
            <div class="col-10">
                <input class="form-control" type="number" asp-for="Price">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2">
                Category
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Category">
            </div>
        </div><br />
        <div class="row">
            <div class="col-2">
                Description
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Description">
            </div>
        </div><br />
        <br />
        <div class="row">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>