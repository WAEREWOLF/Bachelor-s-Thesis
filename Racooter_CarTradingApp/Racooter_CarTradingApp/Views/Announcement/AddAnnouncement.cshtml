@model Racooter.UI.Models.AnnouncementViewModel.AddAnnouncementViewModel
@{
    ViewData["Title"] = "AddTrip";
}

    <form asp-action="AddAnnouncement" method="post">

        <div class="row">
            <div class="col-2">
                Title
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Announcement.Title" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2">
                Date
            </div>
            <div class="col-10">
                <input class="form-control" type="date" asp-for="Announcement.Date">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2">
                Category
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Announcement.Category">
            </div>
        </div><br />
        <div class="row">
            <div class="col-2">
                Description
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Announcement.Description.Content">
            </div>
        </div><br />
        <br />
        <div class="row">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>